<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cosmos.com.simpleacalculator.MainActivity"
    android:background="@android:color/holo_orange_dark">

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_7button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:elevation="0dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickNumber" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_4button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_7button"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickNumber" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_1button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_4button"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickNumber" />

    <Button
        android:text="C"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_CButton"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_1button"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickClear" />

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_0Button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_2button"
        android:layout_toEndOf="@+id/_CButton"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickNumber" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_2button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_4button"
        android:layout_toEndOf="@+id/_4button"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickNumber" />

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_equalsButton"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_3button"
        android:layout_toEndOf="@+id/_0Button"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickEquals" />

    <Button
        android:text="x"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_multiplyButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/_subtractButton"
        android:layout_toEndOf="@+id/_3button"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickOperation" />

    <Button
        android:text="รท"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_divideButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_below="@+id/_addButton"
        android:layout_toEndOf="@+id/_6button"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickOperation" />

    <Button
        android:text="+"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_addButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:elevation="9dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/_6button"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickOperation" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_6button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_9button"
        android:layout_toEndOf="@+id/_5button"
        android:onClick="onClickNumber" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_3button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_divideButton"
        android:layout_toEndOf="@+id/_5button"
        android:onClick="onClickNumber" />

    <Button
        android:text="-"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_subtractButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_divideButton"
        android:layout_toEndOf="@+id/_equalsButton"
        android:onClick="onClickOperation" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_5button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_8button"
        android:layout_toEndOf="@+id/_4button"
        android:onClick="onClickNumber" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_9button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/_8button"
        android:onClick="onClickNumber" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/_8button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_alignBottom="@+id/_9button"
        android:layout_toEndOf="@+id/_7button"
        android:onClick="onClickNumber" />

    <TextView
        android:id="@+id/textView"
        android:text="0"
        android:layout_width="match_parent"
        android:textSize="50sp"
        android:background="@android:color/background_light"
        tools:layout_width="fill_parent"
        android:layout_height="130dp"
        android:gravity="bottom|right"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingRight="5dp" />

</RelativeLayout>
