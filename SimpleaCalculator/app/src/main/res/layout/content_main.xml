<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cosmos.com.simpleCalculator.MainActivity"
    android:background="@android:color/holo_orange_dark">

    <Button
        android:text="7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_7button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:elevation="0dp"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/textView"
        android:text="0"
        android:layout_width="match_parent"
        android:textSize="50sp"
        android:background="@android:color/background_light"
        tools:layout_width="fill_parent"
        android:layout_height="130dp"
        android:gravity="bottom"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingRight="5dp" />

    <Button
        android:text="4"
        android:layout_height="70dp"
        android:id="@+id/_4button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_width="70dp"
        android:layout_below="@+id/_7button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_5button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_8button"
        android:layout_alignStart="@+id/_8button" />

    <Button
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_1button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_4button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_2button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_5button"
        android:layout_alignStart="@+id/_5button" />

    <Button
        android:text="="
        android:layout_width="70dp"
        android:id="@+id/_equalsButton"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickEquals"
        android:layout_height="70dp"
        android:layout_below="@+id/_3button"
        android:layout_alignStart="@+id/_3button" />

    <Button
        android:text="0"
        android:layout_width="70dp"
        android:id="@+id/_0Button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_below="@+id/_2button"
        android:layout_alignStart="@+id/_2button" />

    <Button
        android:text="C"
        android:layout_width="70dp"
        android:id="@+id/_CButton"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="onClickClear"
        android:layout_height="70dp"
        android:layout_below="@+id/_1button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="-"
        android:id="@+id/_subtractButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_below="@+id/_addButton"
        android:layout_alignStart="@+id/_addButton" />

    <Button
        android:text="("
        android:layout_width="70dp"
        android:id="@+id/_leftBracketButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_below="@+id/_subtractButton"
        android:layout_alignStart="@+id/_subtractButton" />

    <Button
        android:text="6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_6button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_9button"
        android:layout_alignStart="@+id/_9button" />

    <Button
        android:text="8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_8button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/_7button" />

    <Button
        android:text="9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_9button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/_5button" />

    <Button
        android:text="3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/_3button"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_below="@+id/_6button"
        android:layout_toEndOf="@+id/_2button" />

    <Button
        android:text="+"
        android:id="@+id/_addButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:elevation="9dp"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/_6button" />

    <Button
        android:text="/"
        android:id="@+id/_divideButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/_subtractButton" />

    <Button
        android:text="*"
        android:id="@+id/_multiplyButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_below="@+id/_divideButton"
        android:layout_toEndOf="@+id/_subtractButton" />

    <Button
        android:text=")"
        android:layout_width="70dp"
        android:id="@+id/_rightBracketButton"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_below="@+id/_multiplyButton"
        android:layout_toEndOf="@+id/_subtractButton" />

    <Button
        android:text="^"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:id="@+id/button8"
        android:layout_below="@+id/_leftBracketButton"
        android:layout_toEndOf="@+id/_equalsButton"
        android:background="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="*"
        android:id="@+id/button10"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_below="@+id/_divideButton"
        android:layout_toEndOf="@+id/_subtractButton" />

    <Button
        android:text="*"
        android:id="@+id/button9"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_below="@+id/_divideButton"
        android:layout_toEndOf="@+id/_subtractButton" />

</RelativeLayout>
